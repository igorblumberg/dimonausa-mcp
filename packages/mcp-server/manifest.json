{
  "dxt_version": "0.2",
  "name": "dimona-usa-api-mcp",
  "version": "1.6.0",
  "description": "The official MCP Server for the Dimona Usa API API",
  "author": {
    "name": "Dimona Usa API",
    "email": "api@dimonatee.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/igorblumberg/dimonausa-mcp.git"
  },
  "homepage": "https://github.com/igorblumberg/dimonausa-mcp/tree/main/packages/mcp-server#readme",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "DIMONA_USA_API_API_KEY": "${user_config.DIMONA_USA_API_API_KEY}"
      }
    }
  },
  "user_config": {
    "DIMONA_USA_API_API_KEY": {
      "title": "api_key",
      "description": "",
      "required": true,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
